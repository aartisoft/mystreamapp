<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Following">

    <TextView
        android:id="@+id/fingNoStreamsTxt"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Streams of people you follow will appear here"
        android:textAlignment="center"
        android:textColor="#333"
        android:textSize="16sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/fingTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Following"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fingRefreshButt"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/refresh_butt" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tabBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tab_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tab_home"
            android:backgroundTint="#555"
            android:paddingTop="40dp"
            android:text="Streams"
            android:textAllCaps="false"
            android:textColor="#555"
            android:textSize="8dp" />

        <Button
            android:id="@+id/tab_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tab_search"
            android:backgroundTint="#555"
            android:paddingTop="40dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="#555"
            android:textSize="8dp" />

        <Button
            android:id="@+id/tab_three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tab_following"
            android:backgroundTint="@color/main_color"
            android:paddingTop="40dp"
            android:text="Following"
            android:textAllCaps="false"
            android:textColor="@color/main_color"
            android:textSize="8dp" />

        <Button
            android:id="@+id/tab_four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/tab_account"
            android:backgroundTint="#555"
            android:paddingTop="40dp"
            android:text="Account"
            android:textAllCaps="false"
            android:textColor="#555"
            android:textSize="8dp" />

        <Button
            android:id="@+id/tab_five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/tab_messages"
            android:backgroundTint="#555"
            android:paddingTop="40dp"
            android:text="Messages"
            android:textAllCaps="false"
            android:textColor="#555"
            android:textSize="8dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/fingStreamsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabBar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topBar"
        android:background="#fff"
        android:divider="#d6d6d6"
        android:dividerHeight="1dp" >

    </ListView>

</RelativeLayout>
